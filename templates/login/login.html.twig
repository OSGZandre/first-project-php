{% block title %}{% endblock %}

{% block body %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <style>
        .example-wrapper {
            max-width: 500px; 
            width: 95%;
            margin: 0 auto; 
            padding: 20px;
        }
        .login-container {
            min-height: 100vh; 
            display: flex;
            justify-content: center; 
            align-items: center; 
        }
    </style>
    <div class="login-container">
        <div class="example-wrapper">
            <h1 class="text-center">Login</h1>
            <hr />
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">{{ message }}</div>
            {% endfor %}
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">{{ message }}</div>
            {% endfor %}
            <form action="{{ path('app_login') }}" method="post">
                <div>
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control" name="email" placeholder="Digite seu Email" required />
                    <br />
                    <label class="form-label">Senha</label>
                    <input type="password" class="form-control" name="password" placeholder="Digite sua senha" required />
                    <br />
                    <button class="btn btn-outline-success w-100" type="submit">Entrar</button>
                </div>
            </form>
            <p class="text-center mt-3">NÃ£o tem uma conta? <a href="{{ path('app_lucky_register') }}">Cadastre-se</a></p>
            {% if clear_local_storage is defined and clear_local_storage %}
                <script>
                    localStorage.removeItem('auth_token');
                </script>
            {% endif %}
            {% if app.session.get('auth_token') %}
                <script>
                    localStorage.setItem('auth_token', '{{ app.session.get('auth_token') }}');
                </script>
            {% endif %}
        </div>
    </div>
{% endblock %}