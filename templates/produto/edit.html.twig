{% extends 'base.html.twig' %}

{% block title %}Editar Produto{% endblock %}

{% block body %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <div class="example-wrapper">
        <h1>Editar Produto</h1>
        {% if produto is not null %}
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h3 class="card-title">Produto:</h3>
                    <p class="card-text">ID: {{ produto.idProduto }}</p>
                    <p class="card-text">Nome: {{ produto.nameProduto }}</p>
                    <p class="card-text">Preço: {{ produto.preco }}</p>
                    <p class="card-text">Estoque: {{ produto.estoque }}</p>
                </div>
            </div>
            <br />
            <form action="{{ path('produto_edit', {idProduto: produto.idProduto}) }}" method="post">
                <div>
                    <label class="form-label">Nome</label>
                    <input class="form-control" name="nameProduto" value="{{ produto.nameProduto }}" required />
                    <br />
                    <label class="form-label">Preço</label>
                    <input class="form-control" name="preco" value="{{ produto.preco }}" required />
                    <br />
                    <label class="form-label">Estoque</label>
                    <input class="form-control" name="estoque" value="{{ produto.estoque }}" required />
                    <br />
                    <button class="btn btn-outline-success" type="submit">Salvar</button>
                    <a class="btn btn-outline-secondary" href="{{ path('produto_novo') }}">Voltar</a>
                </div>
            </form>
        {% else %}
            <p>Nenhum usuário encontrado.</p>
            <a class="btn btn-outline-secondary" href="{{ path('produto_novo') }}">Voltar</a>
        {% endif %}
    </div>

{% endblock %}