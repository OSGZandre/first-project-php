{% extends 'base.html.twig' %}

{% block title %}Editar Usuário{% endblock %}

{% block body %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <style>
        .example-wrapper {
            max-width: 500px;
            width: 95%;
            margin: 0 auto;
            padding: 20px;
        }
        .edit-container {
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }
    </style>
    <div class="edit-container">
        <div class="example-wrapper">
            <h1 class="text-center">Editar Usuário</h1>
            <hr />
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">{{ message }}</div>
            {% endfor %}
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">{{ message }}</div>
            {% endfor %}
            {% if user is not null %}
                <div class="card mb-3" style="width: 100%;">
                    <div class="card-body">
                        <h3 class="card-title">Usuário:</h3>
                        <p class="card-text">ID: {{ user.id }}</p>
                        <p class="card-text">Nome: {{ user.userName }}</p>
                        <p class="card-text">Email: {{ user.email }}</p>
                        <p class="card-text">Telefone: {{ user.telephoneNumber }}</p>
                    </div>
                </div>
                <form action="{{ path('app_admin_edit', {id: user.id}) }}" method="post">
                    <div>
                        <label class="form-label">Nome</label>
                        <input class="form-control" name="userName" value="{{ user.userName }}" required />
                        <br />
                        <label class="form-label">Email</label>
                        <input class="form-control" type="email" name="email" value="{{ user.email }}" required />
                        <br />
                        <label class="form-label">Número de telefone</label>
                        <input class="form-control" name="telephoneNumber" value="{{ user.telephoneNumber }}" required />
                        <br />
                        <label class="form-label">Senha (deixe em branco para manter a senha atual)</label>
                        <input class="form-control" type="password" name="userPassword" placeholder="Digite a nova senha" />
                        <br />
                        <div class="d-flex gap-2">
                            <button class="btn btn-outline-success" type="submit">Salvar</button>
                            <a class="btn btn-outline-secondary" href="{{ path('app_admin') }}">Voltar</a>
                        </div>
                    </div>
                </form>
            {% else %}
                <p class="text-center">Nenhum usuário encontrado.</p>
                <a class="btn btn-outline-secondary w-100" href="{{ path('app_admin') }}">Voltar</a>
            {% endif %}
        </div>
    </div>
{% endblock %}