{% block title %}{% endblock %}

{% block body %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <style>
        .example-wrapper {
            max-width: 500px; 
            width: 95%;
            margin: 0 auto;
            padding: 20px;
        }
        .register-container {
            min-height: 100vh; 
            display: flex;
            justify-content: center; 
            align-items: center; 
            flex-direction: column; 
        }
    </style>

    <div class="register-container">
        <div class="example-wrapper">
            <h1 class="text-center">Cadastro de Usuário</h1>
            <hr />
            <h2 class="text-center">Formulário de Cadastro</h2>
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">{{ message }}</div>
            {% endfor %}
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">{{ message }}</div>
            {% endfor %}
            <form action="{{ path('app_lucky_register') }}" method="post">
                <div>
                    <label class="form-label">Nome</label>
                    <input type="text" class="form-control" name="userName" placeholder="Digite seu nome" required />
                    <br />
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control" name="email" placeholder="Digite seu Email" required />
                    <br />
                    <label class="form-label">Número de telefone</label>
                    <input class="form-control" type="tel" name="telephoneNumber" placeholder="Digite seu Telefone" required />
                    <br />
                    <label class="form-label">Senha</label>
                    <input type="password" class="form-control" name="userPassword" placeholder="Digite sua senha" required />
                    <br />
                    <button class="btn btn-outline-success w-100" type="submit">Salvar</button>
                </div>
            </form>
            <p class="text-center mt-3">Já tem uma conta? <a href="{{ path('app_login') }}">Faça login</a></p>
        </div>
    </div>
{% endblock %}